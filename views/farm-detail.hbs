                markerHTML += '<div class="sensor-status">é›¢ç·š</div>';
            }
            
            markerHTML += '</div></div>';
            marker.innerHTML = markerHTML;
            sensorsContainer.appendChild(marker);
        });
        
        devices.forEach(device => {
            const marker = document.createElement('div');
