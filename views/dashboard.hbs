<script>
// 顯示場域選單
function showFarmMenu(event, farmId, farmName, farmIP) {
    console.log('🖱️ 點擊場域:', farmName, 'IP:', farmIP);
    
    // 防止事件冒泡到其他元素
    event.stopPropagation();
    
    // 更新選單內容
    document.getElementById('modalFarmName').textContent = farmName;
    
    // 設定設備總覽連結
    const deviceOverviewUrl = `http://${farmIP}:8888`;
    const deviceOverviewLink = document.getElementById('deviceOverviewLink');
    deviceOverviewLink.href = deviceOverviewUrl;
    document.getElementById('deviceOverviewUrl').textContent = deviceOverviewUrl;
    
    // 設定環控設定連結
    const controllerUrl = `http://${farmIP}:8888/controller`;
    const controllerLink = document.getElementById('controllerLink');
    controllerLink.href = controllerUrl;
    document.getElementById('controllerUrl').textContent = controllerUrl;
    
    // 顯示選單
    const modal = new bootstrap.Modal(document.getElementById('farmMenuModal'));
    modal.show();
    
    console.log('📋 選單已顯示:', {
        deviceOverview: deviceOverviewUrl,
        controller: controllerUrl
    });
}

// 頁面載入時的初始化
document.addEventListener('DOMContentLoaded', function() {
    console.log('🎛️ 場域選單功能已載入');
    
    // 為表格行添加視覺提示
    const farmRows = document.querySelectorAll('.farm-row');
    farmRows.forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.transform = 'scale(1.01)';
        });
        
        row.addEventListener('mouseleave', function() {
            this.style.transform = 'scale(1)';
        });
    });
    
    // 初始化輪播功能
    initCarousel();
});

// 輪播功能
let carouselInstance = null;
let isCarouselPlaying = true;

function initCarousel() {
    const carouselElement = document.getElementById('farmLayoutCarousel');
    if (!carouselElement) return;
    
    console.log('🎠 初始化場域佈局圖輪播');
    
    // 建立 Bootstrap 輪播實例
    carouselInstance = new bootstrap.Carousel(carouselElement, {
        interval: 5000,
        wrap: true,
        keyboard: true,
        pause: 'hover'
    });
    
    // 控制按鈕事件
    const prevBtn = document.getElementById('carouselPrev');
    const nextBtn = document.getElementById('carouselNext');
    const toggleBtn = document.getElementById('carouselToggle');
    const carouselInfo = document.getElementById('carouselInfo');
    
    if (prevBtn) {
        prevBtn.addEventListener('click', () => {
            carouselInstance.prev();
        });
    }
    
    if (nextBtn) {
        nextBtn.addEventListener('click', () => {
            carouselInstance.next();
        });
    }
    
    if (toggleBtn) {
        toggleBtn.addEventListener('click', () => {
            toggleCarousel();
        });
    }
    
    // 監聽輪播變化
    carouselElement.addEventListener('slide.bs.carousel', function(e) {
        const totalSlides = document.querySelectorAll('.carousel-item').length;
        const currentSlide = e.to + 1;
        
        if (carouselInfo) {
            carouselInfo.textContent = currentSlide + ' / ' + totalSlides;
        }
        
        console.log('🔄 輪播切換到第', currentSlide, '張');
    });
    
    // 初始化工具提示
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    
    // 輪播自動更新感測器資料
    startCarouselDataRefresh();
}

function toggleCarousel() {
    const toggleBtn = document.getElementById('carouselToggle');
    const carouselIcon = document.getElementById('carouselIcon');
    
    if (isCarouselPlaying) {
        carouselInstance.pause();
        isCarouselPlaying = false;
        if (carouselIcon) {
            carouselIcon.className = 'fas fa-play';
        }
        if (toggleBtn) {
            toggleBtn.title = '開始播放';
        }
        console.log('⏸️ 輪播已暫停');
    } else {
        carouselInstance.cycle();
        isCarouselPlaying = true;
        if (carouselIcon) {
            carouselIcon.className = 'fas fa-pause';
        }
        if (toggleBtn) {
            toggleBtn.title = '暫停播放';
        }
        console.log('▶️ 輪播已開始');
    }
}

function startCarouselDataRefresh() {
    // 每30秒更新一次感測器資料（比詳細頁面慢一些）
    setInterval(async () => {
        try {
            const response = await fetch('/api/dashboard/carousel-data');
            if (response.ok) {
                const data = await response.json();
                updateCarouselSensorData(data);
            }
        } catch (error) {
            console.error('更新輪播感測器資料失敗:', error);
        }
    }, 30000);
}

function updateCarouselSensorData(farmsData) {
    // 更新輪播中的感測器狀態
    farmsData.forEach(farm => {
        const farmSlide = document.querySelector('[data-farm-id="' + farm._id + '"]');
        if (farmSlide) {
            // 更新感測器指示器
            farm.sensors.forEach(sensor => {
                const sensorMarker = farmSlide.querySelector('[data-sensor-id="' + sensor.id + '"]');
                if (sensorMarker) {
                    const indicator = sensorMarker.querySelector('.sensor-indicator');
                    if (sensor.lastValue && sensor.lastValue.currentValues) {
                        indicator.classList.remove('inactive');
                        indicator.classList.add('active');
                        
                        // 更新工具提示
                        const tooltip = bootstrap.Tooltip.getInstance(sensorMarker);
                        if (tooltip) {
                            const valueText = sensor.lastValue.currentValues.map(v => v.value + v.unit).join(' / ');
                            sensorMarker.setAttribute('title', sensor.name + ' - ' + valueText);
                            tooltip.setContent({ '.tooltip-inner': sensor.name + ' - ' + valueText });
                        }
                    }
                }
            });
        }
    });
    
    console.log('🔄 輪播感測器資料已更新');
}
</script>
