<!-- 場域佈局圖輪播 -->
{{#if farms}}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-images me-2"></i>場域佈局圖輪播
                </h5>
                <div class="d-flex align-items-center">
                    <small class="text-muted me-3" id="carouselInfo">1 / {{farms.length}}</small>
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-secondary" id="carouselPrev">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="carouselNext">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                        <button type="button" class="btn btn-outline-primary" id="carouselToggle">
                            <i class="fas fa-pause" id="carouselIcon"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div id="farmLayoutCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                    <div class="carousel-inner">
                        {{#each farms}}
                        <div class="carousel-item {{#if @first}}active{{/if}}" data-farm-id="{{this._id}}">
                            <div class="farm-carousel-slide">
                                {{#if this.layout_image}}
                                <div class="carousel-image-container">
                                    <img src="/uploads/{{this.layout_image}}" alt="{{this.name}} 佈局圖" class="carousel-farm-image">
                                    
                                    <!-- 感測器標記 -->
                                    <div class="carousel-sensors-overlay">
                                        {{#each this.sensors}}
                                        <div class="carousel-sensor-marker" 
                                             style="left: {{this.x}}%; top: {{this.y}}%;"
                                             data-sensor-id="{{this.id}}"
                                             data-bs-toggle="tooltip" 
                                             data-bs-placement="top" 
                                             title="{{this.name}}{{#if this.lastValue.currentValues}} - {{#each this.lastValue.currentValues}}{{this.value}}{{this.unit}}{{#unless @last}} / {{/unless}}{{/each}}{{/if}}">
                                            <div class="sensor-indicator {{#if this.lastValue.currentValues}}active{{else}}inactive{{/if}}">
                                                <i class="fas fa-circle"></i>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                    
                                    <!-- 設備標記 -->
                                    <div class="carousel-devices-overlay">
                                        {{#each this.devices}}
                                        <div class="carousel-device-marker" 
                                             style="left: {{this.x}}%; top: {{this.y}}%;"
                                             data-bs-toggle="tooltip" 
                                             data-bs-placement="top" 
                                             title="{{this.name}}">
                                            <div class="device-indicator">
                                                <i class="fas fa-square"></i>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                                {{else}}
                                <div class="no-layout-placeholder">
                                    <i class="fas fa-image fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">尚未上傳佈局圖</h5>
                                </div>
                                {{/if}}
                                
                                <!-- 場域資訊卡片 -->
                                <div class="carousel-info-overlay">
                                    <div class="farm-info-card">
                                        <div class="farm-info-header">
                                            <h6 class="mb-1">
                                                <i class="fas fa-map-marker-alt me-2"></i>{{this.name}}
                                            </h6>
                                            <small class="text-muted">IP: {{this.ip}}</small>
                                        </div>
                                        <div class="farm-info-stats">
                                            <div class="stat-item">
                                                <span class="stat-value">{{this.stats.animal_count}}</span>
                                                <span class="stat-label">隻</span>
                                            </div>
                                            <div class="stat-item">
                                                <span class="stat-value">{{this.stats.feeding_days}}</span>
                                                <span class="stat-label">天</span>
                                            </div>
                                            <div class="stat-item">
                                                <span class="stat-value">{{this.sensors.length}}</span>
                                                <span class="stat-label">感測器</span>
                                            </div>
                                        </div>
                                        <div class="farm-info-actions">
                                            <a href="/farms/{{this._id}}" class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>查看詳情
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    
                    <!-- 輪播指示器 -->
                    <div class="carousel-indicators">
                        {{#each farms}}
                        <button type="button" data-bs-target="#farmLayoutCarousel" data-bs-slide-to="{{@index}}" 
                                class="{{#if @first}}active{{/if}}" aria-current="{{#if @first}}true{{/if}}" 
                                aria-label="場域 {{this.name}}">
                            <span class="indicator-label">{{this.name}}</span>
                        </button>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

<!-- 場域狀態表格 -->
