let carouselInstance = null;
let isCarouselPlaying = true;

function initCarousel() {
    const carouselElement = document.getElementById('farmLayoutCarousel');
    if (!carouselElement) return;
    
    console.log('üé† ÂàùÂßãÂåñÂ†¥Âüü‰ΩàÂ±ÄÂúñËº™Êí≠');
    
    // Âª∫Á´ã Bootstrap Ëº™Êí≠ÂØ¶‰æã
    carouselInstance = new bootstrap.Carousel(carouselElement, {
        interval: 5000,
        wrap: true,
        keyboard: true,
        pause: 'hover'
    });
    
    // ÊéßÂà∂ÊåâÈàï‰∫ã‰ª∂
    const prevBtn = document.getElementById('carouselPrev');
    const nextBtn = document.getElementById('carouselNext');
    const toggleBtn = document.getElementById('carouselToggle');
    const carouselInfo = document.getElementById('carouselInfo');
    
    if (prevBtn) {
        prevBtn.addEventListener('click', () => {
            carouselInstance.prev();
        });
    }
    
    if (nextBtn) {
        nextBtn.addEventListener('click', () => {
            carouselInstance.next();
        });
    }
    
    if (toggleBtn) {
        toggleBtn.addEventListener('click', () => {
            toggleCarousel();
        });
    }
    
    // Áõ£ËÅΩËº™Êí≠ËÆäÂåñ
    carouselElement.addEventListener('slide.bs.carousel', function(e) {
        const totalSlides = document.querySelectorAll('.carousel-item').length;
        const currentSlide = e.to + 1;
        
        if (carouselInfo) {
            carouselInfo.textContent = currentSlide + ' / ' + totalSlides;
        }
        
        console.log('üîÑ Ëº™Êí≠ÂàáÊèõÂà∞Á¨¨', currentSlide, 'Âºµ');
    });
    
    // Ëº™Êí≠Â∞àÁÇ∫Â±ïÁ§∫Ë®≠Ë®àÔºåÁÑ°ÈúÄÂ∑•ÂÖ∑ÊèêÁ§∫
    
    // Ëº™Êí≠Ëá™ÂãïÊõ¥Êñ∞ÊÑüÊ∏¨Âô®Ë≥áÊñô
    startCarouselDataRefresh();
}

function toggleCarousel() {
    const toggleBtn = document.getElementById('carouselToggle');
    const carouselIcon = document.getElementById('carouselIcon');
    
    if (isCarouselPlaying) {
        carouselInstance.pause();
        isCarouselPlaying = false;
        if (carouselIcon) {
            carouselIcon.className = 'fas fa-play';
        }
        if (toggleBtn) {
            toggleBtn.title = 'ÈñãÂßãÊí≠Êîæ';
        }
        console.log('‚è∏Ô∏è Ëº™Êí≠Â∑≤Êö´ÂÅú');
    } else {
        carouselInstance.cycle();
        isCarouselPlaying = true;
        if (carouselIcon) {
            carouselIcon.className = 'fas fa-pause';
        }
        if (toggleBtn) {
            toggleBtn.title = 'Êö´ÂÅúÊí≠Êîæ';
        }
        console.log('‚ñ∂Ô∏è Ëº™Êí≠Â∑≤ÈñãÂßã');
    }
}

function startCarouselDataRefresh() {
    // ÊØè30ÁßíÊõ¥Êñ∞‰∏ÄÊ¨°ÊÑüÊ∏¨Âô®Ë≥áÊñôÔºàÊØîË©≥Á¥∞È†ÅÈù¢ÊÖ¢‰∏Ä‰∫õÔºâ
    setInterval(async () => {
        try {
            const response = await fetch('/api/dashboard/carousel-data');
            if (response.ok) {
                const data = await response.json();
                updateCarouselSensorData(data);
            }
        } catch (error) {
            console.error('Êõ¥Êñ∞Ëº™Êí≠ÊÑüÊ∏¨Âô®Ë≥áÊñôÂ§±Êïó:', error);
        }
    }, 30000);
}

function updateCarouselSensorData(farmsData) {
    // Êõ¥Êñ∞Ëº™Êí≠‰∏≠ÁöÑÊÑüÊ∏¨Âô®ÁãÄÊÖã
    farmsData.forEach(farm => {
        const farmSlide = document.querySelector('[data-farm-id="' + farm._id + '"]');
        if (farmSlide) {
            // Êõ¥Êñ∞ÊÑüÊ∏¨Âô®Âç°Áâá
            farm.sensors.forEach(sensor => {
                const sensorMarker = farmSlide.querySelector('[data-sensor-id="' + sensor.id + '"]');
                if (sensorMarker) {
                    const sensorCard = sensorMarker.querySelector('.sensor-card');
                    const sensorValues = sensorMarker.querySelector('.sensor-values');
                    const sensorStatus = sensorMarker.querySelector('.sensor-status');
                    
                    if (sensor.lastValue && sensor.lastValue.currentValues && sensor.lastValue.currentValues.length > 0) {
                        // Êõ¥Êñ∞ÁÇ∫Ê¥ªË∫çÁãÄÊÖã
                        sensorCard.classList.remove('inactive');
                        sensorCard.classList.add('active');
                        
                        // Êõ¥Êñ∞Êï∏ÂÄºÈ°ØÁ§∫
                        if (sensorValues) {
                            sensorValues.innerHTML = '';
                            sensor.lastValue.currentValues.forEach(value => {
                                const valueDiv = document.createElement('div');
                                valueDiv.className = 'sensor-value-inline';
                                valueDiv.innerHTML = '<span class="value">' + value.value + '</span>' +
                                                   '<span class="unit">' + value.unit + '</span>';
                                sensorValues.appendChild(valueDiv);
                            });
                            sensorValues.style.display = 'flex';
                            
                            // Ê™¢Êü•ÊÑüÊ∏¨Âô®Êï∏ÂÄºÊòØÂê¶Áï∞Â∏∏‰∏¶ÊáâÁî®Ë≠¶Â†±Ê®£Âºè
                            if (window.sensorAlertSystem) {
                                // Ê∏ÖÈô§ËàäÁöÑË≠¶Â†±Ê®£Âºè
                                window.sensorAlertSystem.clearAlertStyle(sensorCard);
                                
                                // Ê™¢Êü•ÊØèÂÄãÊï∏ÂÄº
                                sensor.lastValue.currentValues.forEach(value => {
                                    const alertInfo = window.sensorAlertSystem.checkSensorValue(sensor.id, sensor.type, value.value, value.unit);
                                    console.log(`Dashboard Ë≠¶Â†±Ê™¢Êü• - ÊÑüÊ∏¨Âô® ${sensor.id}: ${value.value}${value.unit}, Áï∞Â∏∏: ${alertInfo.isAbnormal}, Á≠âÁ¥ö: ${alertInfo.level}`);
                                    if (alertInfo.isAbnormal) {
                                        console.log(`Dashboard Â•óÁî®Ë≠¶Â†±Ê®£Âºè - ÊÑüÊ∏¨Âô® ${sensor.id}, Á≠âÁ¥ö: ${alertInfo.level}`);
                                        window.sensorAlertSystem.applyAlertStyle(sensorCard, alertInfo);
                                    }
                                });
                            } else {
                                console.warn('Dashboard Ë≠¶Â†±Á≥ªÁµ±Êú™ËºâÂÖ•');
                            }
                        }
                        
                        // Èö±ËóèÈõ¢Á∑öÁãÄÊÖã
                        if (sensorStatus) {
                            sensorStatus.style.display = 'none';
                        }
                    } else {
                        // Êõ¥Êñ∞ÁÇ∫ÈùûÊ¥ªË∫çÁãÄÊÖã
                        sensorCard.classList.remove('active');
                        sensorCard.classList.add('inactive');
                        
                        // Èö±ËóèÊï∏ÂÄºÈ°ØÁ§∫
                        if (sensorValues) {
                            sensorValues.style.display = 'none';
                        }
                        
                        // È°ØÁ§∫Èõ¢Á∑öÁãÄÊÖã
                        if (sensorStatus) {
                            sensorStatus.style.display = 'block';
                        }
                    }
                }
            });
        }
    });
    
    console.log('üîÑ Ëº™Êí≠ÊÑüÊ∏¨Âô®Ë≥áÊñôÂ∑≤Êõ¥Êñ∞');
}

// Ë™øÊï¥ overlay ‰ª•ÂåπÈÖçÂØ¶ÈöõÂúñÁâáÂ∞∫ÂØ∏
function adjustOverlayToImage(img) {
    const wrapper = img.closest('.image-wrapper');
    if (!wrapper) return;
    
    const overlays = wrapper.querySelectorAll('.carousel-sensors-overlay, .carousel-devices-overlay');
    
    // Á≠âÂæÖÂúñÁâáÂÆåÂÖ®ËºâÂÖ•
    setTimeout(() => {
        const imgRect = img.getBoundingClientRect();
        const wrapperRect = wrapper.getBoundingClientRect();
        
        // Ë®àÁÆóÂúñÁâáÂú®ÂÆπÂô®‰∏≠ÁöÑÂØ¶Èöõ‰ΩçÁΩÆÂíåÂ∞∫ÂØ∏
        const imgLeft = imgRect.left - wrapperRect.left;
        const imgTop = imgRect.top - wrapperRect.top;
        const imgWidth = imgRect.width;
        const imgHeight = imgRect.height;
        
        // Ë™øÊï¥ÊØèÂÄã overlay ÁöÑ‰ΩçÁΩÆÂíåÂ∞∫ÂØ∏
        overlays.forEach(overlay => {
            overlay.style.left = imgLeft + 'px';
            overlay.style.top = imgTop + 'px';
            overlay.style.width = imgWidth + 'px';
            overlay.style.height = imgHeight + 'px';
        });
        
        console.log('üìê Ë™øÊï¥ overlay ‰ª•ÂåπÈÖçÂúñÁâáÂ∞∫ÂØ∏:', {
            left: imgLeft,
            top: imgTop,
            width: imgWidth,
            height: imgHeight
        });
    }, 100);
}

// Ë¶ñÁ™óÂ§ßÂ∞èÊîπËÆäÊôÇÈáçÊñ∞Ë™øÊï¥ÊâÄÊúâ overlay
function adjustAllOverlays() {
    const images = document.querySelectorAll('.carousel-farm-image');
    images.forEach(img => {
        if (img.complete && img.naturalHeight !== 0) {
            adjustOverlayToImage(img);
        }
