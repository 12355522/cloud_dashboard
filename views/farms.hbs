<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas fa-map-marker-alt me-2"></i>場域管理
            </h1>
            <a href="/farms/new" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>新增場域
            </a>
        </div>
    </div>
</div>

<div class="row">
    {{#if farms}}
        {{#each farms}}
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 farm-card" data-farm-id="{{this.id}}">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marker-alt me-2"></i>{{this.name}}
                        </h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/farms/{{this._id}}/edit">
                                    <i class="fas fa-edit me-2"></i>編輯
                                </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">IP 位址</small>
                        <div><code>{{this.ip}}</code></div>
                    </div>
                    
                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="fw-bold text-primary">{{this.stats.feeding_days}}</div>
                                <small class="text-muted">飼養天數</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="fw-bold text-success">{{this.stats.animal_count}}</div>
                                <small class="text-muted">飼養數量</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="fw-bold text-info">{{this.stats.water_consumption}}</div>
                                <small class="text-muted">飲水量</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center p-2 bg-light rounded">
                                <div class="fw-bold text-warning">{{this.stats.fan_count}}</div>
                                <small class="text-muted">風扇數量</small>
                            </div>
                        </div>
                    </div>
                    
                    {{#if this.layout_image}}
                    <div class="mb-3">
                        <img src="/uploads/{{this.layout_image}}" class="img-fluid rounded" alt="場域佈局圖">
                    </div>
                    {{/if}}
                </div>
                
                <div class="card-footer">
                    <div class="d-grid">
                        <a href="/farms/{{this._id}}" class="btn btn-outline-primary">
                            <i class="fas fa-eye me-1"></i>查看詳細
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    {{else}}
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-exclamation-circle fa-4x text-muted mb-4"></i>
                <h3 class="text-muted">尚無場域資料</h3>
                <p class="text-muted mb-4">開始建立您的第一個場域來管理畜牧業務</p>
                <a href="/farms/new" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>建立第一個場域
                </a>
            </div>
        </div>
    {{/if}}
</div>
